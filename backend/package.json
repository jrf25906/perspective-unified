{
  "name": "perspective-backend",
  "version": "1.0.0",
  "description": "Backend API server for Perspective App",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:simple": "SIMPLE_MODE=true nodemon --exec ts-node src/server.ts",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "ingestion": "ts-node src/scripts/ingestion-cli.ts"
  },
  "keywords": [
    "api",
    "express",
    "nodejs",
    "perspective",
    "backend"
  ],
  "author": "Perspective Team",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/sharp": "^0.31.1",
    "@types/winston": "^2.4.4",
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "^2.4.3",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "cron-parser": "^5.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.0.7",
    "pg": "^8.11.3",
    "sharp": "^0.34.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/glob": "^8.1.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.26",
    "@types/supertest": "^6.0.3",
    "axios": "^1.9.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "form-data": "^4.0.2",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
